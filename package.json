{
  "name": "monkey-ts",
  "version": "1.0.0",
  "description": "The Monkey programming language's compiler written in TypeScript.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/leandrotk/monkey-ts.git"
  },
  "keywords": [
    "compiler",
    "programming-language",
    "compiler-design"
  ],
  "author": "=",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leandrotk/monkey-ts/issues"
  },
  "homepage": "https://github.com/leandrotk/monkey-ts#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^5.1.0",
    "ansi-regex": "^6.0.1",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": ">=6",
    "jest": "^27.2.5",
    "lint-staged": ">=10",
    "nodemon": "^2.0.13",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn prettier:check"
    ]
  }
}
